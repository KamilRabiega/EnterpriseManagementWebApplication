@page
@model EnterpriseManagementApp.Pages.Magazine.Products.ReleasedProductsListModel
@{
    ViewData["Title"] = "Ready to release";
}
<div class="bg-light bg-opacity-10 py-2 mb-2">
    <div class="container text-center">
        <h1>List of released products</h1>
    </div>
</div>

<partial name="_Notification">


    @if (Model.ProductionItems != null && Model.ProductionItems.Any())
    {
        <div class="container" style="width: 75%;">
            <table class="table text-center">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Type</td>
                        <td>Quantity PCS</td>
                        <td>Quantity pallets</td>
                        <td>Released</td>
                        <td>Released date</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductionItems)
                    {
                        if (item.Released == true)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Type.Name @item.Type.Diameter/@item.Type.Length/@item.Type.WallThickness/@item.Type.Class</td>
                                <td>@item.QuantityPCS</td>
                                <td>@item.QuantityPallets</td>
                                <td>@item.Released</td>
                                <td>@item.ReleaseDate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container text-center pt-5">
            <p>
                There are no products to show
            </p>
        </div>
    }
