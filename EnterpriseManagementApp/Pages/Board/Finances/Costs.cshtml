@page
@model EnterpriseManagementApp.Pages.Board.Finances.CostsModel
@{
    ViewData["Title"] = "All costs";
}
<div class="bg-light bg-opacity-10 py-2 mb-2">
    <div class="container text-center">
        <h1>All costs</h1>
    </div>
</div>

<partial name="_Notification">


    @if (Model.Costs != null && Model.Costs.Any())
    {
        <div class="container" style="margin: 0 auto; width: 75%;">
            <table class="table text-center">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Value</td>
                        <td>Date</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal costs = 0;
                        var dateNow = DateTime.Now;
                    }
                    @foreach (var item in Model.Costs)
                    {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.CostValue</td>
                                <td>@item.PaymentDate</td>
                            </tr>
                            costs = costs + @item.CostValue;
                        }
                    }
                </tbody>
            </table>
            <div class="container mt-5" style="margin: 0 auto; width: 75%;">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <td>Costs</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@costs</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="container text-center pt-5">
            <p>
                There are no products to show
            </p>
        </div>
    }
