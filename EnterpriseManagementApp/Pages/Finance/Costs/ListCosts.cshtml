@page
@model EnterpriseManagementApp.Pages.Finance.Costs.ListCostsModel
@{
    ViewData["Title"] = "List all products";
}
<div class="bg-light bg-opacity-10 py-2 mb-2">
    <div class="container text-center">
        <h1>All products picked up by magazine</h1>
    </div>
</div>

<partial name="_Notification">


    @if (Model.Costs != null && Model.Costs.Any())
    {
        <div class=" container-fluid text-center" style="width: 75%;">
            <table class="table text-center">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Value (net)</td>
                        <td>Payment date</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Costs)
                    {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.CostValue</td>
                                <td>@item.PaymentDate</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container text-center pt-5">
            <p>
                There are no products to show
            </p>
        </div>
    }
